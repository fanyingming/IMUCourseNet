<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.imu.coursenet.domain">
	<class name="News" table="tb_news">
		<!-- 使用读写缓存 -->
		<cache usage="read-write" />
		<!-- 映射标识属性 -->
		<id name="newsId" type="integer" column="newsId">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="identity" />
		</id>
		<!-- 映射普通属性 -->
		<property name="content" column="content" type="string" not-null="true"/>

		<property name="newsTitle" column="newsTitle" type="string" not-null="true"/>

		<property name="author" column="author" type="string" />
		
		<property name="checkCounts" column="checkCounts" type="integer" not-null="true"/>

		<property name="editDate">
			<column name="editDate" sql-type="datetime" not-null="true" />
		</property>

	</class>
</hibernate-mapping>