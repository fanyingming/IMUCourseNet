<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- Hibernate映射文件的根元素 -->
<hibernate-mapping package="com.imu.coursenet.domain">
	<class name="CourseTaking" table="tb_courseTaking" >
		<!-- 使用读写缓存 -->
		<cache usage="read-write"/>
		<!-- 映射标识属性 -->
		<id	name="courseTakingId" type="integer" column="courseTakingId">
			<!-- 指定使用identity主键生成策略 -->
			<generator class="identity"/>
		</id>
		<!-- 映射普通属性 -->
		<property name="score" column="score"	 type="integer" />
		<!-- 映射和CourseDetail的关联关系 -->
		<many-to-one name="courseDetail" column="courseDetailId" 
			class="CourseDetail" lazy="false"/>
			<!-- 映射和Student的关联关系 -->
		<many-to-one name="student" column="studentId" 
			class="Student" lazy="false"/>
	</class>
</hibernate-mapping>