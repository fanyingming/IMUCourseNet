<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<!-- 指定Struts 2配置文件的根元素 -->
<struts>
	<package name="teacher" extends="struts-default" >
		
		<action name="uploadCourseware" class="com.imu.coursenet.action.teacher.UploadCoursewareAction">
			<!-- 动态设置Action的属性值 -->
			<param name="savePath">/uploadFiles</param>
			<!-- 配置Struts 2默认的视图页面 -->
			<result name="success">/teacher/upload-succ.jsp</result>	
			<result name="input">/teacher/uploadCourseware.jsp</result>	
		</action>
		
		<!-- 罗列教师开设的课程 -->
		<action name="listTeacherCourseDetail" class="com.imu.coursenet.action.teacher.ListTeacherCourseDetailsAction">
			<result name="success">/teacher/listTeacherCourseDetails.jsp</result>
		</action>

		<!-- 罗列某门课程的详细信息 -->
		<action name="showCourseDetail" class="com.imu.coursenet.action.teacher.ShowCourseDetailAction">
			<result name="success">/teacher/showCourseDetail.jsp</result>
		</action>
		
		<!-- 罗列教师开设的课程 -->
		<action name="goToCourseMainPage" class="com.imu.coursenet.action.teacher.GoToCourseMainPageAction">
			<result name="success">/teacher/course-main.jsp</result>
		</action>
		
		<!-- 个人信息	-->
	<action name="teaShowInfo" class="com.imu.coursenet.action.teacher.TeaShowInfoAction">
				<result name="success">/teacher/teaShowInfo.jsp</result>	
	</action>
	
	<!-- 修改个人信息	-->
	<action name="TeaUpdate" class="com.imu.coursenet.action.teacher.TeaUpdateAction">
				<result name="success" type="redirectAction">
					<param name="actionName">teaShowInfo</param>
				</result>	
	</action>
	<!-- 为课程添加参考书 -->
		<action name="editRefBook" class="com.imu.coursenet.action.teacher.EditRefBookAction">
			<result type="redirectAction">
					<param name="actionName">showCourseDetail</param>
				</result>
		</action>
		<!-- 为课程添加教学计划-->
		<action name="editTeachPlan" class="com.imu.coursenet.action.teacher.EditTeachPlanAction">
			<result type="redirectAction">
					<param name="actionName">showCourseDetail</param>
				</result>
		</action>
		<!-- 为课程添加课程简介 -->
		<action name="editCourseIntroduce" class="com.imu.coursenet.action.teacher.EditCourseIntroduceAction">
			<result type="redirectAction">
					<param name="actionName">showCourseDetail</param>
				</result>
		</action>
	</package>
</struts>